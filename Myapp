# انتقل إلى مجلد المشروع على جهازك (أنشئه لو ما موجود)
mkdir my-python-app
cd my-python-app

# أنشئ ملف Python بسيط
echo "def greet(name):\n    print(f'Hello, {name}!')" > main.py
echo "greet('Manal')" >> main.py

# أنشئ ملف إعداد Deepsource
echo '[version = 1]\n\n[[analyzers]]\nname = "python"\nenabled = true\n\n[analyzers.meta]\npython_version = "3.10"' > .deepsource.toml

# ابدأ git في المجلد
git init

# ربط المستودع بالـ GitHub repo اللي أنشأته
git remote add origin https://github.com/YOUR_USERNAME/my-python-app.git

# إضافة الملفات للمرحلة المؤقتة (staging)
git add .

# إنشاء أول commit
git commit -m "Initial commit with Deepsource config"

# رفع الملفات إلى GitHub
git push -u origin master
